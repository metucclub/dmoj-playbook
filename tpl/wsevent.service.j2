[Unit]
Description=DMOJ websocket server for events
After=syslog.target

[Service]
ExecStart=/usr/bin/node {{ APP_DIR }}/websocket/daemon.js
Type=simple
Environment="NODE_PATH=\"{{ APP_DIR }}/node_modules\""
User={{ ansible_user_id }}
Group={{ ansible_user_id }}

[Install]
WantedBy=multi-user.target
